<h1><%= @cocktail.name %></h1>

<h3>Ingredients</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to "Delete", dose_path(dose), method: :delete %>
      </li>
  <% end %>
</ul>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn-treehouse"%>

<%= link_to "Back", cocktails_path, class: "btn-treehouse" %>
