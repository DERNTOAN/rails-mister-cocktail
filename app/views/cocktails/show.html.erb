<h1><%= @cocktail.name %></h1>

<h3>Ingredients</h3>

<ul>
  <% @cocktail.ingredient_ids.each do |ingredient_id| %>
     <% ingredient = Ingredient.find(ingredient_id) %>
     <li> <%= ingredient.doses[0].description %> - <%= ingredient.name %> </li>
  <% end %>
</ul>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
